<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/list_item_hor_pad"
    android:paddingTop="@dimen/list_item_vert_pad"
    android:paddingEnd="@dimen/list_item_hor_pad"
    android:paddingBottom="@dimen/list_item_vert_pad">

    <TextView
        android:id="@+id/decision_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decision_default_title"
        android:textColor="@android:color/primary_text_light"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/decision_item_extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/decision_item_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no description"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/decision_item_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"

            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>