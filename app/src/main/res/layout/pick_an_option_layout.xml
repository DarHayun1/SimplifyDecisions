<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pick_option_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Take a decision"
        android:paddingVertical="@dimen/edit_goal_headline_vert_pad"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/menu_vert_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pick_option_a_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:text="@android:string/cancel" />

        <Ima
            android:id="@+id/pick_option_b_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:text="@string/save_button_text" />
    </LinearLayout>
</LinearLayout>
