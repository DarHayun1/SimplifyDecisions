<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/menu_logo_size"
        android:layout_height="@dimen/menu_logo_size"
        android:src="@drawable/decisions_temp_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/decisions_btn"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginStart="@dimen/menu_margin"
        android:layout_marginTop="@dimen/menu_margin"
        android:src="@android:drawable/ic_menu_myplaces"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_red_light"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/issues_btn"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginEnd="@dimen/menu_margin"
        android:layout_marginTop="@dimen/menu_margin"
        android:src="@android:drawable/ic_menu_myplaces"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_red_light"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>