<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:orientation="vertical"
    tools:context=".ui.issues.EditIssueFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/issue_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/issue_default_title"
            android:textAlignment="textStart"
            android:textSize="@dimen/issue_title_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/issue_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:hint="@string/issue_title_hint"
            android:inputType="text"
            android:textSize="@dimen/issue_title_text_size"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_issue_title_icon"
            android:layout_width="@dimen/issue_title_icon_size"
            android:layout_height="@dimen/issue_title_icon_size"
            android:adjustViewBounds="true"
            android:src="@drawable/pencil_edit_icon"
            app:layout_constraintBottom_toBottomOf="@id/issue_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/issue_title_tv"
            android:contentDescription="@string/edit_button_contentdesc" />

        <TextView
            android:id="@+id/issue_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/issue_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/issue_title_et" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/opinions_layout" />

        <include layout="@layout/facts_layout" />

    </LinearLayout>

    <Button
        android:id="@+id/to_decision_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Decision"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/issue_title_tv" />

</LinearLayout>
