<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:clickable="true"
    tools:context=".ui.issues.OpinionDetailsFragment">

    <LinearLayout
        android:id="@+id/top_drawer_opinion_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/edit_opinion_toolbar"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:elevation="@dimen/toolbar_elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:subtitleTextAppearance="@style/ToolbarSecondaryTextStyle"
            android:background="@android:color/transparent">

            <TextView
                style="@style/ToolbarTitleStyle"
                android:id="@+id/opinion_details_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/related_issue_label"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:text="@string/related_issue_label_text"
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/related_issue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/label_to_text_marg"
                android:textSize="16sp"
                android:textColor="@android:color/primary_text_dark"

                app:layout_constraintStart_toEndOf="@id/related_issue_label"
                app:layout_constraintTop_toTopOf="@id/related_issue_label"/>

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/opinion_details_bottom_drawer"
        android:transitionName="@string/opinions_bottom_drawer_nav"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/bottom_drawer_vert_margin"
        android:background="@drawable/bottom_drawer_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/importance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:text="@string/importance_label"
        android:textColor="@android:color/primary_text_light" />

            <com.dualcores.swagpoints.SwagPoints
            xmlns:swagpoints="http://schemas.android.com/apk/res-auto"
            android:id="@+id/seekbar_point"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:padding="64dp"
            swagpoints:min="5"
            swagpoints:max="100"
            swagpoints:step="5"
            swagpoints:progressColor="@color/color_progress"
            swagpoints:progressWidth="10dp"
            swagpoints:arcColor="@color/color_arc"
            swagpoints:arcWidth="6dp"
            swagpoints:textSize="22sp"
            swagpoints:textColor="@color/app_blue_dark"
            swagpoints:indicatorIcon="@drawable/small_logo_indicator"
            />
    <!-- RadioGroup for visible selection of a priority -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/radButton_high"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/prioRed"
            android:checked="true"
            android:text="@string/high_priority"
            android:theme="@style/WhiteRadioButton" />

        <RadioButton
            android:id="@+id/radButton_medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/prioOrange"
            android:text="@string/medium_priority"
            android:theme="@style/WhiteRadioButton" />

        <RadioButton
            android:id="@+id/radButton_low"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/prioYellow"
            android:text="@string/low_priority"
            android:theme="@style/WhiteRadioButton" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:text="Category:"/>
        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:dropDownWidth="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/new_category_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/new_category_hint"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:inputType="text"
            android:visibility="invisible"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tasks_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:text="@string/tasks_label"
        android:textColor="@android:color/primary_text_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tasks_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:focusableInTouchMode="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/add_task_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/task_item_height"
            android:text="@string/add_new_task_text"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            style="@style/TextAppearance.AppCompat.Medium"/>
    </LinearLayout>

        </LinearLayout>

    </ScrollView>

    </FrameLayout>


</LinearLayout>